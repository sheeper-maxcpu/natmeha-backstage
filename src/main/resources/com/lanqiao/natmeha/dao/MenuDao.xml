            <result property="menuName" column="menu_name" jdbcType="VARCHAR"/>
            <result property="menuUrl" column="menu_url" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,menu_name,menu_url
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from t_menu
        where  id = #{id,jdbcType=INTEGER} 
    </select>
    
    <select id="getRoleMenuByRoles" parameterType="list" resultMap="BaseResultMap">
        select
            m.id,
            m.menu_name,
            m.menu_url
        from t_menu m
            inner join t_role_menus rm
                on rm.menu_id = m.id
        <where>
            <foreach collection="list" item="role" separator="or">
                rm.role_id=#{role.itemid,javaType=INTEGER}
            </foreach>
        </where>
    </select>

