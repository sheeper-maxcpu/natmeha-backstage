<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanqiao.natmeha.dao.TbFileDao">
    <resultMap id="BaseResultMap" type="com.lanqiao.natmeha.model.TbNatmehaFile">
        <id column="itemID" jdbcType="INTEGER" property="itemid" />
        <id column="itemCode" jdbcType="CHAR" property="itemcode" />
        <result column="DATA_CODE" jdbcType="CHAR" property="dataCode" />
        <result column="UPLOADER" jdbcType="VARCHAR" property="uploader" />
        <result column="UPLOADER_CODE" jdbcType="CHAR" property="uploaderCode" />
        <result column="FILE_NAME" jdbcType="VARCHAR" property="fileName" />
        <result column="FILE_TYPE" jdbcType="VARCHAR" property="fileType" />
        <result column="FILE_SIZE" jdbcType="DOUBLE" property="fileSize" />
        <result column="FILE_PATH" jdbcType="VARCHAR" property="filePath" />
        <result column="itemCreateAt" jdbcType="TIMESTAMP" property="itemcreateat" />
    </resultMap>
    <sql id="Base_Column_List">
    itemID, itemCode, DATA_CODE, UPLOADER, UPLOADER_CODE, FILE_NAME, FILE_TYPE, FILE_SIZE,
    FILE_PATH, itemCreateAt
    </sql>
    <insert id="insert" keyColumn="itemID" keyProperty="itemid" parameterType="com.lanqiao.natmeha.model.TbNatmehaFile" useGeneratedKeys="true">
    insert into tb_natmeha_file (itemCode, DATA_CODE, UPLOADER,
      UPLOADER_CODE, FILE_NAME, FILE_TYPE,
      FILE_SIZE, FILE_PATH, itemCreateAt
      )
    values (#{itemcode,jdbcType=CHAR}, #{dataCode,jdbcType=CHAR}, #{uploader,jdbcType=VARCHAR},
      #{uploaderCode,jdbcType=CHAR}, #{fileName,jdbcType=VARCHAR}, #{fileType,jdbcType=VARCHAR},
      #{fileSize,jdbcType=DOUBLE}, #{filePath,jdbcType=VARCHAR}, #{itemcreateat,jdbcType=TIMESTAMP}
      )
  </insert>

    <select id="selectFile" resultMap="BaseResultMap" parameterType="TbNatmehaFile">
        select * from tb_natmeha_file where DATA_CODE=#{dateCode}
    </select>

    <update id="updateFilePath" parameterType="TbNatmehaFile">
        update tb_natmeha_file
        <set>
            <if test="fileName != null">
                FILE_NAME = #{fileName,jdbcType=VARCHAR},
            </if>
            <if test="filePath != null">
                FILE_PATH = #{filePath},
            </if>
            <if test="fileSize != null">
                FILE_SIZE = #{fileSize,jdbcType=DOUBLE},
            </if>
            <if test="fileType != null">
                FILE_TYPE = #{fileType,jdbcType=VARCHAR},
            </if>
        </set>
        where DATA_CODE=#{dataCode}
    </update>


</mapper>